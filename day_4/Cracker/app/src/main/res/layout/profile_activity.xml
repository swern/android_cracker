<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/name_information"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/email_information"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/age_information"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <Button
        android:id="@+id/get_started_button"
        android:text="@string/get_started"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/view_diary_button"
        android:text="view Diary"
        android:layout_below="@+id/view_diary_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="viewDiary"/>

    <Button
        android:id="@+id/search_diary_button"
        android:text="Search Diary"
        android:layout_below="@+id/search_diary_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="searchDiary"/>
</LinearLayout>