<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/search_diary"
        android:hint="Search"/>


    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_toRightOf="@+id/search_diary"
        android:layout_alignParentRight="true"
        android:onClick="searchDiary"/>

    <TextView
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/display_food_type"
        android:text="food type here"
        android:textAppearance="?android:textAppearanceLarge"/>

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/display_calories"
        android:text="calories here"
        android:textAppearance="?android:textAppearanceLarge"/>

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/display_meal"
        android:text="meal here"
        android:textAppearance="?android:textAppearanceLarge"/>
</LinearLayout>